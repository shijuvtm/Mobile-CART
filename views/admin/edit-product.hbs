<section>
    <div class="container mt-4">
        <div class="row">
            <div class=""col-md-6>
                <h2 class="text-center">Edit Product</h2>
                <form method="POST"  action="/admin/edit-product/{{product._id}}" enctype="multipart/form-data">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" value="{{product.Name}}">
                    <label for="">Category</label>
                    <input type="text" name="Category" class="form-control" value="{{product.Category}}">
                    <label for="">Description</label>
                    <input type="text" name="Description" class="form-control" value="{{product.Description}}">
                    <label for="">Price</label>
                    <input type="number" name="Description" class="form-control" value="{{product.Price}}">
                   

                     <label for="">Image</label>
                    <img src="/public/product-images/{{product._id}}.jpg" alt="" style="width:100px;height:auto;">
                    <input type="file" name="Image" class="form-control">

                    <button type="submit" class="btn btn-sucess mt-4 btn-primary">Submit</button>
                    
                </form>
            </div>
        </div>
    </div>
</section>